#include<stdio.h>
#include<stdlib.h>

struct node
{
    int data;
    struct node *left, *right;
};

struct node* create()
{
    int x;
    struct node* newnode = (struct node*)malloc(sizeof(struct node));

    printf("Enter Data(-1 for no node): ");
    scanf("%d",&x);

    if(x == -1)
        return NULL;
    
    newnode->data = x;

    printf("Enter the left one %d: \n",x);
    newnode->left = create();

    printf("Enter the right one %d: \n",x);
    newnode->right = create();

    return newnode;
}

int main()
{
    struct node* root;
    root = create();
    printf("\nBinary tree created successfully!\n");
    return 0;
}
